<div class="row">
	<div class="col-md-8">
		<h2>Race List</h2>
		<table class="table table-striped">
			<thead>
				<tr>
					<th>Name</th>
					<th>Race in progress</th>
					<th>Nr. of checkpoints</th>
					<th>Nr. of participants</th>
					<th>Options</th>
				</tr>
			</thead>
			<tbody id="raceList">
			</tbody>
		</table>
	</div>

	<div class="col-md-4">
		<h2>Race Update</h2>
		<div id="updateForm">
			<div class="form-group">
				<label for="upName">Name:</label>
				<input type="text" class="form-control" id="upName">
			</div>
			<div class="form-group">
				<div class="checkbox">
					<label>
						<input type="checkbox" class="checkboxsize"><label class="lineHeight30">Race is in Progress</label>
					</label>
				</div>
			</div>
			<input type="hidden" id="upId">
			<button type="button" class="btn btn-primary" id="updateRace">Update</button>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-md-4" id="" >
		<h2>Race Create</h2>
		<div id="createForm">
			<div class="form-group">
				<label for="usr">Name:</label>
				<input type="text" class="form-control" id="crName">
			</div>
			<button type="button" class="btn btn-primary" id="crRace">Create New</button>
		</div>
	</div>
</div>