<div class="row">
	<div class="col-md-8">
		<table class="table table-striped">
			<thead>
				<tr>
					<th>Username</th>
					<th>Options</th>
				</tr>
			</thead>
			<tbody id="userList">
			</tbody>
		</table>
	</div>

	<div class="col-md-4">
		<h2>User Update</h2>
		<div id="updateForm">
			<div class="form-group">
				<label for="upUsername">Username:</label>
				<input type="text" class="form-control" id="upUsername">
			</div>
			<input type="hidden" id="upId">
			<button type="button" class="btn btn-primary" id="updateUser">Update</button>
		</div>
	</div>
</div>

<div class="row">
	<div class="col-md-4" id="" >
		<h2>User Create</h2>
		<div id="createForm">
			<div class="form-group">
				<label for="usr">Username:</label>
				<input type="text" class="form-control" id="crUsername">
			</div>
			<div class="form-group">
				<label for="upEmail">Email:</label>
				<input type="text" class="form-control" id="crEmail">
			</div>
			<div class="form-group">
				<label for="upPassword">Password:</label>
				<input type="password" class="form-control" id="crPassword">
			</div>
			<button type="button" class="btn btn-primary" id="crUser">Create New</button>
		</div>
	</div>
</div>
